            <div class="row ">
                
                <div class="col-lg-6">
                    <img src="/img/node.jpg"/>
                    </div>

                <div class="col-lg-6">
                    <div class="single-article-section">
                        <form action="/update/<%= quotes._id%>" method="POST">
                            <div class="form-group">
                            Post Title <input type="text" class="form-control" placeholder="post title" name="title" value="<%= quotes.title %>">
                            </div>


                            <div class="form-group">
                                Post description   <input type="text" class="form-control"  placeholder="post description" name="description" value="<%= quotes.description %>"> 
                            </div>

                            <div class="form-group">
                            author    <input type="text" class="form-control" placeholder="author" name="author" value="<%= quotes.author%>">
                            </div>

                            <div class="form-group">
                                <input type="file" class="form-control" placeholder="image" name="photo" value="<%= quotes.image%>">
                                 
                            </div>
                            <div class="form-group">
                                 
                                <img src="/img/<%= quotes.image%> " alt="" width="100px">
                            </div>

                            <div class="form-group">
                            Updated_at    <input type="date" class="form-control" placeholder="create_at" name="date" value="<%= quotes.createdDate %>">
                            <span><%= quotes.createdDate %></span>
                            </div>
                            <div class="form-group">
                               Category <input type="text" class="form-control" placeholder="category" name="category" value="<%= quotes.category %>">
                            </div>
                            
                            <button type="submit" class="btn btn-primary">update</button>

                        </form>




                    </div>
                </div>
            </div>
        </div>
        <!-- end single article section -->

        <div class="row">
            <div class="col-md-12">
